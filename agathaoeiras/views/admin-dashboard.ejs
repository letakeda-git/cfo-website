<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Agatha Oeiras</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg">
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600&display=swap" rel="stylesheet">
</head>
<body>
    <div class="admin-header">
        <div class="container">
            <div class="admin-title">Admin Dashboard</div>
            <div class="admin-actions">
                <span class="admin-user">Welcome, <%= username || 'Admin' %></span>
                <a href="/" class="btn-admin-secondary">View Store</a>
                <form method="POST" action="/admin/logout" class="inline-form">
                    <button type="submit" class="btn-admin-secondary">Logout</button>
                </form>
            </div>
        </div>
    </div>

    <div class="admin-content">
        <!-- Quick Actions Section -->
        <div class="admin-section">
            <div class="admin-section-header">
                <h2>Quick Actions</h2>
            </div>
            <div class="admin-section-content">
                <div class="quick-actions">
                    <a href="/admin/products/add" class="btn btn-primary btn-large">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-margin">
                            <line x1="12" y1="5" x2="12" y2="19"></line>
                            <line x1="5" y1="12" x2="19" y2="12"></line>
                        </svg>
                        Add New Product
                    </a>
                    <a href="/admin/about/edit" class="btn btn-outline btn-large">
                        <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon-margin">
                            <path d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"></path>
                            <path d="m18.5 2.5 3 3L12 15l-4 1 1-4 9.5-9.5z"></path>
                        </svg>
                        Edit About Page
                    </a>
                </div>
            </div>
        </div>

        <!-- Products Management Section -->
        <div class="admin-section">
            <div class="admin-section-header">
                <h2>Manage Products</h2>
            </div>
            <div class="admin-section-content">
                <div class="products-grid">
                    <% ceramics.forEach(function(product) { %>
                    <div class="product-card-admin">
                        <div class="product-image-admin">
                            <img src="<%= product.image %>" alt="<%= product.name %>">
                        </div>
                        <div class="product-info-admin">
                            <h3><%= product.name %></h3>
                            <p><strong>â‚¬<%= product.price %></strong> <%= product.category %></p>
                            <p><%= product.description %></p>
                            <div class="product-actions">
                                <a href="/admin/products/<%= product.id %>/edit" class="btn-edit">Edit</a>
                                <button class="btn-delete" data-product-id="<%= product.id %>">Delete</button>
                            </div>
                        </div>
                    </div>
                    <% }); %>
                </div>
            </div>
        </div>
    </div>

    <!-- Edit Product Modal -->
    <div id="editModal" class="modal">
        <div class="modal-content">
            <div class="modal-header">
                <h3>Edit Product</h3>
                <button class="close-modal" id="closeModalBtn">&times;</button>
            </div>
            <form id="editProductForm" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group">
                        <label for="editName">Product Name</label>
                        <input type="text" id="editName" name="name" required>
                    </div>
                    <div class="form-group">
                        <label for="editPrice">Price</label>
                        <input type="number" id="editPrice" name="price" step="0.01" required>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="editCategory">Category</label>
                        <select id="editCategory" name="category" required>
                            <option value="bowls">Bowls</option>
                            <option value="vases">Vases</option>
                            <option value="mugs">Mugs</option>
                            <option value="plates">Plates</option>
                            <option value="cups">Cups</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="editImageType">Image Source</label>
                        <select id="editImageType" name="imageType" onchange="toggleEditImageInput()">
                            <option value="upload">Upload New Image</option>
                            <option value="url">Image URL</option>
                        </select>
                    </div>
                </div>
                <div class="form-group" id="editImageUploadGroup">
                    <label for="editImageFile">Upload New Image</label>
                    <input type="file" id="editImageFile" name="imageFile" accept="image/*">
                    <small class="form-help">Supported formats: JPG, PNG, GIF, WebP (Max 5MB)</small>
                </div>
                <div class="form-group" id="editImageUrlGroup" class="hidden">
                    <label for="editImageUrl">Image URL</label>
                    <input type="url" id="editImageUrl" name="imageUrl">
                </div>
                <div class="form-group">
                    <label for="editDescription">Description</label>
                    <textarea id="editDescription" name="description" required></textarea>
                </div>
                <button type="submit" class="btn-add-product">Update Product</button>
            </form>
        </div>
    </div>

    <script src="/js/admin.js"></script>
</body>
</html>
